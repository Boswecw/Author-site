{
	"name": "charles-boswell-author-site",
	"version": "1.0.0",
	"type": "module",
	"private": true,
	"scripts": {
	  "dev": "svelte-kit dev --port 3000",
	  "build": "svelte-kit build",
	  "build:full": "svelte-kit sync && svelte-kit build",
	  "preview": "svelte-kit preview",
	  "check": "svelte-check --tsconfig ./tsconfig.json",
	  "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
	  "lint": "prettier --plugin-search-dir . --check .",
	  "format": "prettier --plugin-search-dir . --write .",
	  "type-check": "tsc --noEmit",
	  "build:check": "npm run check && npm run build",
	  "clean": "rm -rf .svelte-kit build dist",
	  "postinstall": "svelte-kit sync",
	  "test": "vitest run"
	},
	"engines": {
	  "node": ">=20"
	},
	"devDependencies": {
	  "@sveltejs/adapter-netlify": "^5.2.3",
	  "@sveltejs/kit": "^2.37.0",
	  "@sveltejs/vite-plugin-svelte": "^6.1.3",
	  "@sveltejs/vite-plugin-svelte-inspector": "^5.0.1",
	  "@tailwindcss/typography": "^0.5.16",
	  "@types/node": "^20.14.11",
	  "@types/nodemailer": "^6.4.19",
	  "autoprefixer": "^10.4.21",
	  "postcss": "^8.5.6",
	  "prettier": "^3.3.3",
	  "prettier-plugin-svelte": "^3.2.6",
	  "svelte": "^5.38.6",
	  "svelte-check": "^4.0.4",
	  "tailwindcss": "^3.4.17",
	  "typescript": "^5.6.3",
	  "vite": "^7.1.4",
	  "vitest": "^2.1.3"
	},
	"dependencies": {
	  "firebase": "^11.10.0",
	  "marked": "^16.2.1",
	  "mongodb": "^6.19.0",
	  "nodemailer": "^6.10.1"
	},
	"overrides": {
	  "rollup": "^4.20.0"
	}
  }
  