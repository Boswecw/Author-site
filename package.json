{
  "name": "charles-boswell-author-site",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "dotenv -e .env.local -- vite dev --port 3000",
    "build": "npm run build:production",
    "build:production": "svelte-kit sync && vite build",
    "build:local": "svelte-kit sync && dotenv -e .env.local -- vite build",
    "preview": "dotenv -e .env.local -- vite preview --port 3000",
    "preview:production": "vite preview --port 3000",
    "start": "node build",
    "start:local": "dotenv -e .env.local -- node build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "format": "prettier --write .",
    "test": "vitest"
  },
  "packageManager": "npm@11.6.0",
  "devDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.50.1",
    "@sveltejs/adapter-node": "^5.3.2",
    "@sveltejs/kit": "^2.37.1",
    "@sveltejs/vite-plugin-svelte": "^4.0.4",
    "@tailwindcss/typography": "^0.5.16",
    "@tsconfig/svelte": "^5.0.5",
    "@types/node": "^20.14.11",
    "@types/nodemailer": "^6.4.19",
    "autoprefixer": "^10.4.21",
    "dotenv-cli": "^10.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.6",
    "rollup": "^4.50.1",
    "svelte": "^5.38.8",
    "svelte-check": "^4.0.4",
    "tailwindcss": "^3.4.17",
    "terser": "^5.44.0",
    "typescript": "^5.9.2",
    "vite": "^5.4.19",
    "vitest": "^2.1.3"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "firebase": "^11.10.0",
    "marked": "^16.2.1",
    "mongodb": "^6.19.0",
    "nodemailer": "^6.10.1"
  }
}
